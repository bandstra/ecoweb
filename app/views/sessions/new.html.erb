<% @page_title = "Log in" %>

<% if notice %>
	<p id="notice"><%= notice %></p>
<% end%>

<%= form_tag sessions_path do %>
	<p class="field">
		<%= label_tag :email %><br />
		<%= text_field_tag :email, params[:email] %>
	</p>
	<p class="field">
		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</p>
    <p class="button">
		<%= submit_tag 'Log in' %>
	</p>
	
<% end %>